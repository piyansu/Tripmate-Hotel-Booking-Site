<% layout('layouts/boilerplate') %>

<div class="container mt-4">
  <h2 class="mb-4">All Listings</h2>

  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% data.forEach((listing) => { %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card listing-card h-100">
            <img src="<%= listing.image %>" class="card-img-top" alt="<%= listing.title %>" />
            <div class="card-body">
              <h5 class="card-title mb-1"><%= listing.title %></h5>
              <p class="card-text small mb-1 text-muted"><%= listing.description %></p>
              <p class="card-location mb-1 text-secondary">
                <i class="fa-solid fa-location-dot me-1"></i>
                <%= listing.location %>, <%= listing.country %>
              </p>
              <p class="card-price">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
            </div>
          </div>
        </a>
      </div>
    <% }); %>
  </div>
</div>
