<% layout('layouts/boilerplate') %>

<div style="background-image: url('<%= data.image %>'); background-size: cover; background-position: center; background-repeat: no-repeat; min-height: 100vh; width: 100%;">
  <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg border-0 p-4" style="max-width: 600px; width: 90%; background-color: rgba(255,255,255,0.95);">
      <h2 class="text-center mb-4 fw-bold">Edit Your Listing</h2>
      <form action="/listings/<%= data._id %>?_method=PUT" method="post">
        <div class="mb-3">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input type="text" id="title" name="title" class="form-control" placeholder="Title" value="<%= data.title %>" required />
        </div>

        <div class="mb-3">
          <label for="description" class="form-label fw-semibold">Description</label>
          <input type="text" id="description" name="description" class="form-control" placeholder="Description" value="<%= data.description %>" required />
        </div>

        <div class="mb-3">
          <label for="image" class="form-label fw-semibold">Image URL</label>
          <input type="text" id="image" name="image" class="form-control" placeholder="Image URL" value="<%= data.image %>" required />
        </div>

        <div class="mb-3">
          <label for="price" class="form-label fw-semibold">Price (INR)</label>
          <input type="number" id="price" name="price" class="form-control" placeholder="Price" value="<%= data.price %>" required />
        </div>

        <div class="row mb-4">
          <div class="col-md-6">
            <label for="location" class="form-label fw-semibold">Location</label>
            <input type="text" id="location" name="location" class="form-control" placeholder="Location" value="<%= data.location %>" required />
          </div>
          <div class="col-md-6">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input type="text" id="country" name="country" class="form-control" placeholder="Country" value="<%= data.country %>" required />
          </div>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-warning fw-bold">
            <i class="fa-solid fa-pen-to-square me-2"></i>Edit Listing
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
 